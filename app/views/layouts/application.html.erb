<!DOCTYPE html>
<html>
  <head>
    <title>Cookbook</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <h1><%= link_to 'CookBook', root_path %></h1>
            </div>
            <div class="navbar-right">
              <p class="navbar-text">Bem-vindo ao maior livro de receitas online</p>
              <%= render 'shared/search_form' %>
              <%= link_to 'Enviar uma receita', new_recipe_path, class: 'btn btn-success navbar-btn' %>
              <% if user_signed_in?%>
                Ol√° <%= current_user.email%> <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
              <% else %>
              <%= link_to 'Login', new_user_session_path %>
              <% end %>
            </div>
          </div>
        </nav>
      </header>
      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
